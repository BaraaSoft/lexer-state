{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist", // where to put the TS files
    "target": "ES2017",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "module": "CommonJS",
    "esModuleInterop": true,
    "composite": false,
    "incremental": false,
    "jsx": "react-jsx"
  },
  "include": ["src"] // which files to compile,
}
